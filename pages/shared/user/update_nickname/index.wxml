<!--pages/user/update_nickname/index.wxml-->
<cu-custom bgColor="bg-white" isBack="{{true}}">
  <!-- <view slot="content"></view> -->
</cu-custom>

<form class="">
  <view class="padding-lg">
    <view class="flex justify-center">
        <view class="text-xxl text-bold text-black">修改昵称</view>
    </view>
    <!-- 标签选择 -->
    <view class="cu-form-group margin-top-xl" style="border-top: 1rpx solid #EEE">
      <view class="title text-bold text-black">昵称</view>
      <input value="{{nickname}}" bindinput="handleUserNameInput" placeholder="请输入昵称"></input>
    </view>
    <view class="text-grey margin-top-sm">昵称长度应是1-16位，不宜过长</view>

    <!-- 修改按钮 -->
    <view class="flex justify-center margin-top-xl" bindtap="updateUserNickName">
      <button loading="{{loading}}" disabled="{{loading}}" class="cu-btn xxl" style="background-color:#1AAD19;color:#FFF;width: 50vw;">确定</button>
    </view>
  </view>
</form>
